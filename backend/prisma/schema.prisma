datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  GM
  PLAYER
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      Role       @default(PLAYER)
  campaigns Campaign[]
}

model Campaign {
  id          String        @id @default(uuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  events      Event[]
  characters  Character[]
  locations   Location[]
  objects     ObjectModel[]
}

model Event {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  title       String
  description String?
  createdAt   DateTime @default(now())

  @@unique([campaignId, title])
  @@index([campaignId, createdAt])
}

model Character {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  name        String
  description String?
  createdAt   DateTime @default(now())

  @@unique([campaignId, name])
  @@index([campaignId, name])
}

model Location {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  name        String
  description String?
  createdAt   DateTime @default(now())

  @@unique([campaignId, name])
  @@index([campaignId, name])
}

model ObjectModel {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  name        String
  description String?
  createdAt   DateTime @default(now())

  @@unique([campaignId, name])
  @@index([campaignId, name])
}

enum NodeType {
  EVENT
  CHARACTER
  LOCATION
  OBJECT
}

enum RelationType {
  APPEARS
  OCCURS_AT
  USES
  HAS
  PARALLEL
  PREVIOUS
  NEXT
  LINK
}

model Relation {
  id        String       @id @default(uuid())
  fromType  NodeType
  fromId    String
  toType    NodeType
  toId      String
  kind      RelationType
  createdAt DateTime     @default(now())

  @@unique([fromType, fromId, toType, toId, kind])
  @@index([fromType, fromId])
  @@index([toType, toId])
}
